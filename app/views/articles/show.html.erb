<div>
  <h1>
    <%= @article.title %>
    <%= link_to edit_article_path, class: "custom-link" do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "custom-link" do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </h1>
</div>

<hr>

<div>
  <p><%= @article.content %></p>
</div>
